.container-body{
  padding:40rpx;
  box-sizing: border-box;
}
.pay-list{
  width:100%;
  height:260rpx;
  background-color:#fff;
  border-radius: 15rpx;
  margin-bottom:50rpx;
}
.pay-list>image{
  width:100%;
  height:50rpx;
}
.pay-item{
  padding:12rpx 30rpx;
  box-sizing: border-box;
  height:60rpx;
  line-height: 45rpx;
}
.pay-item image{
  height:40rpx;
  width:40rpx;
  line-height: 40rpx;
  vertical-align: middle;
  margin:0 10rpx;
}
.red{
  color:#f00;
}
