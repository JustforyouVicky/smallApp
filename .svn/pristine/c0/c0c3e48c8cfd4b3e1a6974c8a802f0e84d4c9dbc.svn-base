.container-body{
  position: relative;
}
 .bg{
  width:100%;
  height:100%;
  position: absolute;
  top:0;
  left:0;
  background-color:#fff; 
}
.bg>image{
  width:100%;
}
.pre-list{
  position: absolute;
  top:60rpx;
  left:5%;
  padding:30rpx;
  box-sizing: border-box;
  width:90%;
  height:100%;
  background-color:#fff;
  border-radius: 10rpx;
}
.pre-list .pre-item{
  height:70rpx;
  line-height: 70rpx; 
  /* border:1px solid red; */
}
.pre-list .pre-item .left{
  width:28%;
}
.pre-list .pre-item .right{
  text-align: left;
  width:72%;
  border-bottom:1px solid #eee;
  padding-left:10rpx;
  box-sizing: border-box;
}
.pre-list .pre-item .right>input{
  height:70rpx;
  line-height: 70rpx;
}

.reason{
  /* height:150rpx; */
  /* line-height: 70rpx; */
  margin:10rpx 0 20rpx;
}
.reason>view{
  height:70rpx;
  line-height: 70rpx;
}
.reason input{
  height:100%;
  width:100%;
  border:1px solid #f00;
  padding-left:16rpx;
  box-sizing: border-box;
}
.desc>view:first-child{
  margin-bottom:20rpx;
}
.desc>view:last-child{
  height:200rpx;
  width:100%;
}
textarea{
  height:100%;
  width:100%;
  border:1px solid #f00;
  padding-left:16rpx;
  box-sizing: border-box;
}
.btn{
  margin:50rpx 0;
  letter-spacing: 0.2rem;
  border-radius: 0;
}