<view class="container-body">
  <view class="table">
    <view class="tr">
      <view class="th" bindtap="activate">
        <view wx:if="{{!isClick}}">请假</view>
        <view wx:else>取消</view>
      </view>
      <view class="th">
        <view>周一\n{{days[0]}}</view>
      </view>
