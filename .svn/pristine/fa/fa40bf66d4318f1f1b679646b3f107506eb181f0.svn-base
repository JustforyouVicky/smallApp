
Page({

  /**
   * 页面的初始数据
   */
  data: {
    currentTab: 0,
    showView:true
  },
  onLoad(options) {

  },
  //点击切换
  clickTab(e){
    this.setData({
      currentTab:e.target.dataset.current
    })
    if(e.target.dataset.current=='0'){
      this.setData({
        showView:true
      })
    }else{
      this.setData({
        showView:false
      })
    }
  },
 
  /**
   * 生命周期函数--监听页面初次渲染完成
   */
  onReady: function () {
  
  },

})