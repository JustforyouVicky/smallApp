.info-list{
  width:100%;
  padding: 30rpx;
  box-sizing: border-box;
}
.info-item{
  width:100%;
  /* height:320rpx; */
  height:auto;
  margin-bottom:100rpx;
}
.info-item >.left{
  width:15%;
  height:100%;
  position: relative;
  margin-right:2%;
}
.info-item >.left .lf-date{
  height:100rpx;
  line-height: 50rpx;
  margin-top:70rpx;
}
.info-item >.left .sign{
  width:28rpx;
  height:28rpx;
  border-radius: 50%;
  position: absolute;
  right:-32rpx;
  top:60rpx;
  z-index: 222;
  background-color: #fff;
}
.info-item >.left .red{
  border:1px solid #f00;
}
.info-item >.left .gray{
  border:1px solid #adadad;
}
.info-item >.right{
  height:100%;
  width:75%;
  padding:20rpx;
  box-sizing: border-box;
  text-align: left;
  border-radius: 12rpx;
  box-shadow: 1px 1px 1px 1px #adadad;
}
 .info-item >.right .rf-detail{
  /* padding:30rpx; */
  /* box-sizing: border-box; */
  margin-bottom:30rpx;
  /* height:200rpx; */
  width:100%;
}
.info-item >.right .detail-title{
  font-size:32rpx;
  text-align: center;
}
.info-item >.right .rf-detail .img-info{
  width:100%;
  height:280rpx;
  /* overflow: hidden; */
  margin:20rpx 0;
}
.img-info image{
  width:100%;
  height:100%;
}
.info-item >.right .content{
  font-size:26rpx;
  color:#adadad;
  line-height: 36rpx;
}
#line{
  width:1px ;
  height:100%;
  background-color:#adadad;
  position: fixed;
  top:10rpx;
  left:20%;
}