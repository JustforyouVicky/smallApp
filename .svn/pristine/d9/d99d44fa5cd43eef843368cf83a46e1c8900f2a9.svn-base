
.container-body{
  height:100%;
  width:100%;
  position: relative;
}
.top-bg{
  width:100%;
  height:36%;
  position: relative;
}
.top-bg>image{
  width:100%;
  height:100%;
  position: absolute;
  top:0;
  left:0;
}
.user-pic {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: absolute;
  top:10rpx;
  left:10%;
  width:80%;
  height:90%;
}
.user-pic>view{
  width:180rpx;
  height: 180rpx;
  border:1px solid #fff;
  border-radius: 50%;
  text-align:center;
  line-height: 200rpx;
  margin:50rpx 0;
}
.userinfo-avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.userinfo-nickname {
  color: #fff;
  font-size:36rpx;
}
.bottom-btn{
  position: absolute;
  bottom:200rpx;
  left:0;
  width:100%;
  height:180rpx;
}
.bottom-btn>view{
  width:100%;
  height:50%;
}
.bottom-btn>view>button{
  height:100%;
  margin:10rpx 0 30rpx;
  border-radius: 0;
  letter-spacing: 0.2rem;
}
.bottom-btn>view:first-child>button{
  background-color:#4D3E99;
}
.bottom-btn>view:last-child>button{
  background-color:#FD3B3B;
}