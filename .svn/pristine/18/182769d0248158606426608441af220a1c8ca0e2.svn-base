.top-bg{
  width:100%;
  height:500rpx;
  position: relative;
}
.top-bg>image{
  width:100%;
  height:100%;
}
.top-bg>view{
  height:280rpx;
  width:50%;
  position: absolute;
  bottom:160rpx;
  left:0;
  right:0;
  margin:0 auto;
  text-align: center;
  color:#fff;
  font-size:64rpx;
  font-family: '华文行楷';
}
.top-bg>view>image{
  height:280rpx;
  width:280rpx;
  margin-bottom:30rpx;
}
.bottom-list{
  width:92%;
  margin:30rpx auto;
  background-color:#fff;
  border-radius: 15rpx;
  padding:20rpx;
  box-sizing: border-box;
}
.bottom-list>view:first-child{
  height:70rpx;
  line-height: 70rpx;
  font-size:34rpx;
  font-weight:bold;
  margin-bottom:15rpx;
  padding:0 15rpx;
}
.share-list{
  width:100%;
}
.share-list>.share-item{
  width:100%;
  height: 70rpx;
  line-height: 70rpx;
  box-sizing: border-box;
  padding:0 15rpx;
  border-top:1px solid #eee;
}
.left{
  width:50%;
}
.right{
  width:50%;
  text-align:right;
}