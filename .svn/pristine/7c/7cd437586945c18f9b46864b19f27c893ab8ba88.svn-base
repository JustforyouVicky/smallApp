.info-list{
  width:100%;
  padding: 50rpx;
  box-sizing: border-box;
}
.info-list .info-item{
  width:100%;
  height:320rpx;
}
.info-list .info-item >.left{
  width:18%;
  height:100%;
  border-right:1px solid #adadad;
  position: relative;
}
.info-list .info-item >.left .lf-date{
  height:100rpx;
  line-height: 50rpx;
  margin-top:70rpx;
}
.info-item >.left .sign{
  width:28rpx;
  height:28rpx;
  border-radius: 50%;
  position: absolute;
  right:-16rpx;
  top:60rpx;
  background-color: #fff;
}
.info-item >.left .red{
  border:1px solid #f00;
}
.info-item >.left .gray{
  border:1px solid #adadad;
}
.info-list .info-item >.right{
  height:100%;
  width:80%;
  padding:20rpx;
  box-sizing: border-box;
  text-align: left;
}
.info-list .info-item >.right .rf-detail{
  padding:30rpx;
  box-sizing: border-box;
  margin-bottom:30rpx;
  border-radius: 12rpx;
  box-shadow: 1px 1px 1px 1px #adadad;
}
.info-item >.right .detail-title{
  font-size:32rpx;
  margin-bottom:20rpx;
}
.info-item >.right .content{
  font-size:26rpx;
  color:#adadad;
  line-height: 36rpx;
}