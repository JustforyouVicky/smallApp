/* pages/index/index.wxss */
page{
  background-color:#F3F3F3;
  color:#333;
}
.container>.container-body{
  margin-bottom:50rpx;
}
swiper{
  text-align: center;
}  
swiper {
  height: 340rpx;
}
swiper-item{
  height:100%;
}
swiper-item image {
  width: 100%;
  height: 100%;
}
.swiper-container{
  position: relative;
}
/* 中间图标导航 */
.nav-list{
  padding:0 80rpx;
  margin:30rpx 0;
  width:100%;
  height:180rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  position: relative;
}
.nav-list>image{
  height:140%;
  width:100%;
  position: absolute;
  top:-60rpx;
  left:0;
  z-index:111;
}
.nav-list>.nav-item{
  z-index:222;
  width:24%;
  height:150rpx;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  position: relative;
  /* border:1px solid red; */
}
.nav-list>.nav-item .nav-btn{
  width:100%;
  height:100%;
  text-align: center;
  position: absolute; 
  top:0;
  right:0;
  bottom:0;
  left:0;
  margin:auto; 
}
.nav-list>.nav-item image{
  width:150rpx;
  height:110rpx;
  border-radius: 50%;
}
.nav-list>.nav-item .nav-btn>view{
  text-align:center;
}
.nav-list>.nav-item .nav-btn>view>text{
  font-size:28rpx;
}
/* 上课表现以及剩余课时 */
.expression{
  height:345rpx;
  width:100%;
  padding:20rpx 15rpx;
  box-sizing: border-box;
}
.expression .left,
.expression .right{
  width:50%;
  height:100%;
  float: left;
  position: relative;
  text-align: center;
}
.expression .left image,
.expression .right image{
  width:90%;
  height:100%;
  border-radius: 20rpx;
}
.expression .right>.surplus{
  position: absolute;
  top:-10rpx;
  right:0;
  bottom:0;
  left:0;
  margin:auto;
  color:#fff;
  font-size: 28rpx;
  letter-spacing: 0.2rem;
  width:70%;
  height:120rpx;
  text-align: center;
  line-height: 60rpx;
}
.expression .right>.surplus>text:first-child{
    font-size:45rpx;
}
/*特色课程  */
.feature{
  height:400rpx;
  width:100%;
  padding:20rpx 15rpx;
  box-sizing: border-box;
}
.activity{
  height:520rpx;
  width:100%;
  padding:20rpx 0 20rpx 15rpx;
  box-sizing: border-box;
}
.scroll-container{
  width: 100%;
}
.feature .scroll-container{
  height:270rpx;
}
.activity .scroll-container{
  height:360rpx;
}
.photo .scroll-container{
  height:570rpx;
}
.feature .title,.activity .title,
.photo .title,.teacher .title{
  padding:0 20rpx 0 10rpx;
  box-sizing: border-box;
  font-size:26rpx;
  width:100%;
  height:60rpx;
  line-height: 60rpx;
  font-size:28rpx;
  margin:20rpx 0 30rpx;
}
.feature .title>view:first-child,
.activity .title>view:first-child,
.teacher .title>view:first-child,
.photo .title>view:first-child{
  float:left;
  height:60rpx;
  line-height: 60rpx;
  padding-left:8rpx;
  box-sizing: border-box;
}
.feature .title>view>text,
.activity .title>view>text,
.teacher .title>view>text,
.photo .title>view>text{
  height:100%;
}
.feature .title>view>text:first-child,
.activity .title>view>text:first-child,
.teacher .title>view>text:first-child,
.photo .title>view>text:first-child{
  width:10rpx;
  height:30rpx;
  margin-right:10rpx;
  border-left:6rpx solid #fd3b3a;
}
.activity .title>view:last-child,
.photo .title>view:last-child{
  float:right;
  color:#fd3b3a;
}
.fea-scroll,.act-scroll{
  width: 100%;
  white-space: nowrap; 
}
.fea-item,.act-item{
  width: 50%;
  display: inline-block;
  text-align: center;
}
.fea-item>image{
  width: 90%;
  height: 250rpx;
}
.act-item>image{
  width: 90%;
  height: 300rpx;
}
.act-scroll{
  padding-left:20rpx;
  box-sizing:border-box;
}
.act-item{
  height:400rpx;
  width:70%;
  padding:20rpx;
  box-sizing: border-box;
  background-color:#fff;
  border-radius: 20rpx;
  box-shadow: 1px 1px 1px 1px  #adadad inset;
  margin-right:30rpx;
}
.act-item .act-img,
.photo-item .photo-img{
  height:75%;
  width:100%;
  overflow: hidden;
  border-radius: 20rpx;
}
.act-item .desc{
  height:25%;
  width:100%;
  margin-top:20rpx;
  font-size:22rpx;
}
.act-item>view>view{
  width:100%;
}
.act-item>view>.img-title{
  font-weight:bold;
  font-size:24rpx;
  text-align: left;
}
.act-item>view>.img-subtitle{
  width:100%;
  text-align: left;
  margin: 10rpx 0;
  font-size:24rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

/* 班级相册展示 */
.photo{
  width:100%;
  height:700rpx;
  padding:20rpx 0 20rpx 15rpx;
  box-sizing: border-box;
  margin-bottom:30rpx;
}
.photo-scroll{
  width:100%;
  white-space: nowrap;
  padding-left:20rpx;
  box-sizing:border-box;
  height:100%;
}
.photo-item{
  background-color: #fff;
  border-radius: 15rpx;
  width:70%;
  height:100%;
  margin-right:30rpx;
  padding:20rpx;
  box-sizing: border-box;
  display:inline-block;
  box-shadow: 1px 1px 1px 1px #adadad inset;
}
.photo-item>.desc {
  width:100%;
  height:30%;
  padding:20rpx 0;
  box-sizing: border-box;
  text-align: center;
}
.photo-item>.desc>view{
  font-size:30rpx;
  text-align: center;
}
.photo-item>.desc>view:nth-child(2)>text{
  width:12rpx;
  height:12rpx;
  display:inline-block;
  border-radius: 50%;
  background-color:#fd3b3a;
}
.photo-item>.desc>view:last-child{
  color:#adadad;
}
/* 名师展示 */
.teacher{
  height:500rpx;
  width:100%;
  margin-top:20rpx;
}
.teacher .title{
  height:15%;
}
.teacher .scroll-container{
  height:350rpx;
}
.teach-scroll{
  width:100%;
  white-space: nowrap;
  padding-left:35rpx;
  box-sizing:border-box;
  height:100%;
  font-size:22rpx;
}
.teach-scroll .teach-item{
  width:70%;
  height:100%;
  margin-right:30rpx;
  display:inline-block;
  background-color:#fd3b3a;
  border-radius:15rpx;
  box-shadow: 2px 2px 2px 2px  #adadad inset;
  
}
.teach-scroll .teach-item>.left{
  float: left;
  width:35%;
  text-align: center;
  padding-left:20rpx;
  box-sizing: border-box;
}
.teach-scroll .teach-item>.right{
  float: left;
  width:65%;
  height:100%;
  position: relative;
  padding-right:15rpx;
  box-sizing: border-box;
}
.teach-item>.left>view{
  width:140rpx;
  height:140rpx;
  border-radius: 50%;
  vertical-align: middle;
  margin-top:100rpx;
  background-color:#fff;
  position: relative;
}
.teach-item>.left>view>image{
  width:120rpx;
  height:120rpx;
  position: absolute;
  top:0;
  right:0;
  bottom:0;
  left:0;
  margin:auto;
}
 .teach-item>.right>view{
  white-space: normal;
  width:96%;
  height:60%;
  padding:20rpx 0;
  position: absolute;
  top:0;
  right:0;
  bottom:0;
  left:0;
  margin:auto;
  text-overflow: ellipsis;
  overflow: hidden;
  color:rgba(255,255,255,.9);
}
 .teach-item>.right>view>view:first-child{
  font-size:30rpx;
}
.teach-item>.right>view>view:nth-child(2){
  margin:10rpx 0;
}
.teach-item>.right>view>view:nth-child(2)>text:nth-child(2){
  margin:0 15rpx;
}