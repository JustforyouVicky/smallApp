.container-body {
  position: relative;
}
.container-body>image {
  width: 100%;
  /* height: 100%; */
  position: absolute;
  top: 0;
  left: 0;
}
.video {
  width: 100%;
  height: 480rpx;
  padding:30rpx ;
  box-sizing: border-box;
  margin:0 auto;
}
.video>video {
  width: 100%;
  height: 100%;
}
.detail{
  width:100%;
  padding:30rpx;
  box-sizing: border-box;
}
.detail .detail-item{
  margin-bottom:30rpx;
}
.detail .detail-item>.sub-title{
  font-size:34rpx;
  font-weight:blod;
  height:60rpx;
}
.detail .detail-item>.content{
  font-size:30rpx;
  text-indent: 50rpx;
  font-weight: normal;
  color:#8B8B8B;
  text-align:justify;
}
