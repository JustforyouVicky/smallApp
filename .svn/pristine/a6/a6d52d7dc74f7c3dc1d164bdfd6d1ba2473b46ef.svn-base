const app=getApp();
Page({
  data: {
    ActivityCourse:{},
    uphone:'',
    activity_id:null,
    children_id:null
  },
  onLoad(options){
    var children_id=options.children_id;
    var activity_id=options.activity_id;
    var uphone=app.globalData.uphone;
    this.setData({
      children_id:children_id,
      uphone:uphone,
      activity_id:activity_id,
    });
    wx.showLoading({title:'加载中...'});
    if(activity_id&&uphone){
      wx.request({
        url: 'https://small.aisuoedu.com/api/WeChatHome',
        data: {    
          token1:uphone, 
          token2:activity_id,  
          type:'GetActivityCourse'
        },
        method: 'GET',
        header: {'content-type':'application/json'}, 
        success:res=>{
          wx.hideLoading();
          var res=JSON.parse(res.data).ActivityCourse[0];
          this.setData({ActivityCourse:res})
        },
        fail:()=>{
          wx.showModal({
            content:'网络故障,请检查!',
            showCancel:false,	
          })
        }
      }); 
    }
  },
  apply(){
    wx.request({
      url: 'https://small.aisuoedu.com/api/WeChatHome',
      data: {    
        token1:this.data.uphone, 
        token2:this.data.activity_id,  
        token3:this.data.children_id,  
        type:'InsertCourseActivitySign'
      },
      method: 'GET',
      header: {'content-type':'application/json'}, 
      success:res=>{
        if(res.data=='{"results":"提交成功"}'){
          wx.showToast({
            title:'活动报名成功!',
            duration:5000
          });
        }else if(res.data=='{"results":"已报名该活动课"}'){
          wx.showModal({
            content:'您已报名该活动课,等待工作人员联系您',
            showCancel:false
          });
        }else{
          wx.showModal({
            content:'活动报名失败,请重试',
            showCancel:false
          });
        }
      },
      fail:()=>{
        wx.showModal({
          content:'网络故障,请检查!',
          showCancel:false,	
        })
      }
    });
  },
  onPullDownRefresh(){
    this.onLoad();
  },
  onShareAppMessage(){}
})