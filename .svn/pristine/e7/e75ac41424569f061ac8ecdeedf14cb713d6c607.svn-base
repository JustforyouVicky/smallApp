.container-body{
  padding: 50rpx;
  box-sizing: border-box;
}
.top-bg{
  width:100%;
  height:36%;
  position: relative;
  border-bottom:2px solid #eee;
}
/* .top-bg>image{
  width:100%;
  height:100%;
  position: absolute;
  top:0;
  left:0;
} */
.mini-pic {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: absolute;
  top:10rpx;
  left:10%;
  width:80%;
  height:90%;
}
.mini-pic>view{
  width:180rpx;
  height: 180rpx;
  border:1px solid #fff;
  border-radius: 50%;
  text-align:center;
  line-height: 200rpx;
  margin:50rpx 0;
}
.mini-avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.mini-name {
  /* color: #fff; */
  font-size:36rpx;
}
.detail{
  padding-top:60rpx;
  box-sizing: border-box;
}
.detail .title{
  font-size:32rpx;
  margin-bottom:60rpx;
}
.detail>view:not(:first-child){
  margin:30rpx 0;
  letter-spacing: 0.2rem;
}