page{
  background-color: #fff;
  height:100%;
}
.container-body{
  height:100%;
  width:100%;
}
.swiper-tab{
  width: 96%;
  text-align: center;
  height: 150rpx;
  line-height: 150rpx;
  display: flex;
  flex-flow: row;
  justify-content: space-between;
  margin:30rpx auto;
  background-color: #fbfbfb;
}
.swiper-tab-item{
  width: 50%; 
  color:#434343;
  font-size:36rpx;
  line-height: 100rpx;
  font-weight: bold;
  margin: 20rpx;
  border-radius: 20rpx;
  color:#fff;
  letter-spacing: 0.1rem;
}
.swiper-tab-item:first-child{
  background-color:#FD3B3B;
}
.swiper-tab-item:last-child{
  background-color:#0799EA;
}
.active{
  box-shadow: 3px 3px 3px 4px #adadad;
}
.hideshow{
  display:block;
}
 .hide{
  display:none;
} 
.class-item{
  height:180rpx;
  /* line-height: 110rpx; */
  padding:20rpx 30rpx;
  box-sizing: border-box;
}
.class-item .left{
  height:100%;
  width:25%;
  padding-left:20rpx;
  box-sizing: border-box;
  /* border:1px solid red; */
  position: relative;
  line-height: 120rpx;
}
.class-item .left>view image{
  width:110rpx;
  height:110rpx;
  border-radius: 50%;
}
.class-item .right{
  width:75%;
  height:100%;
  text-align: left;
  border-bottom:1px solid #eee;
}
.class-item .right .title>view{
  font-size:32rpx;
}
.class-item .right .title text:first-child{
  margin-right:20rpx;
}
.class-item .right>view{
  width:100%;
  height:100%;
}
.class-item .right .sign{
  width:20%;
  height:100%;
  position: relative;
}

.class-item .right .sign>.unread{
  width:28rpx;
  height:28rpx;
  border-radius: 50%;
  border:1px solid #f00;
  position: absolute;
  top:0;
  bottom:0;
  left:0;
  right:0;
  margin:auto;
}
.class-item .right>view>view:first-child{
  height:100rpx;
  margin-top:20rpx;
  line-height:50rpx;
  padding-left:20rpx;
  box-sizing: border-box;
  /* border:1px solid red; */
}
.class-item .right>view>view:first-child text{
  color:#adadad;
}