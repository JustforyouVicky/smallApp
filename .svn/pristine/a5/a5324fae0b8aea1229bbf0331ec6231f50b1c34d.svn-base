.container-body{
  background-image: url('https://small.aisuoedu.com/mini/img/index/shengyukeshi.png');
  background-repeat: no-repeat;
  padding:50rpx;
  box-sizing: border-box;
}
.act-item{
  height:400rpx;
  width:100%;
  padding:20rpx;
  box-sizing: border-box;
  background-color:#fff;
  border-radius: 20rpx;
  box-shadow: 1px 1px 1px 1px  #adadad ;
  margin:0 auto;

}
.act-item>.act-img{
  height:80%;
  width:100%;
  overflow: hidden;
  border-radius: 20rpx;
}
.act-item .desc{
  height:25%;
  width:100%;
  margin-top:20rpx;
}
.act-item .desc .img-title{
  font-weight:bold;
  font-size:26rpx;
  text-align: left;
}
.act-item>view>.img-subtitle{
  width:100%;
  white-space: normal;
  text-align: left;
  margin: 10rpx 0;
  font-size:24rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.date{
  margin:60rpx 0 30rpx;
  font-size:36rpx;
}
.date>text,.where>text{
  margin:0 20rpx;
}
.where{
  margin-bottom:60rpx;
  font-size:36rpx;
}
.line{
  height:20rpx;
  width:100%;
  display:flex;
  justify-content: space-between;
  margin-bottom:60rpx;
}
.line>view:not(:nth-child(2)){
  width:43%;
  border-bottom:1px solid red;
}
.line>view:nth-child(2){
  width:5%;
  margin:0 3%;
}
.line>view:nth-child(2)>view{
  width:30rpx;
  height:30rpx;
  border-radius: 50%;
  border:1px solid red;
}
.bottom-img{
  margin-bottom:160rpx;
  position: relative;
}
.bottom-img>image{
  height:360rpx;
}
.price{
  width:200rpx;
  height:200rpx;
  border-radius: 50%;
  background-color:#FF444B;
  color:#fff;
  position: absolute;
  bottom:-40rpx;
  right:-20rpx;
}
.price>text:not(:nth-child(2)){
  font-size:34rpx;
}
.price>text:nth-child(2){
  display:inline-block;
  width:200rpx;
  margin-top:10rpx;
  border-bottom:1px solid #fff;
  transform: rotate(170deg);
}
