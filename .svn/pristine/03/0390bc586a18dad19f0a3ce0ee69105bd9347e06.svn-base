page{
  background-color:#fff;
}
.surplus-list{
  width:100%;
  background-color:#fff;
  position: relative;
}
.surplus-list>image{
  width:100%;
  height:220rpx;
}
.surplus-list .title{
  height:80rpx;
  position: absolute;
  top:40rpx;
  left:30rpx;
  color:#fff;
  font-size:36rpx;
  letter-spacing: 0.2rem;
}
.surplus-list .title>text{
  font-size:60rpx;
  margin:0 16rpx;
}
.sub-title{
  padding-left:30rpx;
  color:#adadad;
  font-size:32rpx;
  margin-bottom:20rpx;
}
.surplus-item{
  height:150rpx;
  line-height: 110rpx;
  padding:20rpx 30rpx;
  box-sizing: border-box;
}
.surplus-item .left{
  height:100%;
  width:10%;
  position: relative;
  line-height: 120rpx;
}
.surplus-item .left>view{
  width:28rpx;
  height:28rpx;
  border-radius: 50%;
  border:1px solid #adadad;
  position: absolute;
  top:0;
  bottom:0;
  left:0;
  right:0;
  margin:auto;
}
.surplus-item .right{
  width:90%;
  height:100%;
  text-align: left;
  border-bottom:1px solid #eee;
}
.surplus-item .right>view>view:first-child{
  line-height:50rpx;
  padding-left:20rpx;
  box-sizing: border-box;
}
.surplus-item .right>view>view:first-child text{
  color:#adadad;
}